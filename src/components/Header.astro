---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <div class="container">
    <nav>
      <div class="logo">
        <a href="/">
          <img src="/img/logo.png" alt={SITE_TITLE} />
        </a>
      </div>
      <div class="internal-links">
        <HeaderLink href="/">In√≠cio</HeaderLink>
        <HeaderLink href="/blog">News</HeaderLink>
        <HeaderLink href="/about">Pappo</HeaderLink>
      </div>
    </nav>
  </div>
</header>
<style>
  header {
    margin: 0;
    padding: 0;
    background: var(--header-bg);
    backdrop-filter: blur(9px);
    color: var(--header-color);
    /* box-shadow: 0 2px 8px var(--gray-dark); */
    position: sticky;
    top: 0;
    z-index: 2000;
  }

  .logo {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo a,
  .logo a img {
    padding: 0;
    margin: -4px 0 0 0;
    border: 0;
    display: block;
    height: 100%;
    transition: 0.6s;
    aspect-ratio: unset;
  }

  .logo:hover img {
    transform: scale(1.1);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav a {
    padding: 0 0.5em;
    color: var(--color);
    border-bottom: 3px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  @media (max-width: 720px) {
  }
</style>
